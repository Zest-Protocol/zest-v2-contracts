{
  "name": "tests",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "private": true,
  "scripts": {
    "clarigen": "clarigen && clarigen docs",
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:generate-coverage-html": "genhtml lcov.info --branch-coverage -o coverage --ignore-errors format,inconsistent",
    "test:open-coverage-html": "open coverage/index.html",
    "test:generate-coverage-and-open-html": "npm run test:report && npm run test:generate-coverage-html && npm run test:open-coverage-html",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\""
  },
  "author": "Zest Protocol",
  "license": "MIT",
  "dependencies": {
    "@clarigen/cli": "4.0.0",
    "@clarigen/core": "4.0.0",
    "@clarigen/test": "4.0.0",
    "@stacks/clarinet-sdk": "3.9.2",
    "@stacks/clarinet-sdk-wasm": "3.9.2",
    "@stacks/transactions": "7.2.0",
    "@types/node": "24.10.0",
    "chokidar-cli": "3.0.0",
    "typescript": "5.9.2",
    "vite": "7.1.3",
    "vitest": "^4.0.7",
    "vitest-environment-clarinet": "3.0.1"
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.2.2",
    "@noble/hashes": "^1.5.0",
    "@noble/secp256k1": "^2.1.0",
    "@vitest/coverage-v8": "^3.2.4"
  }
}
